<%- include('./partials/head.ejs') %>

    <main id="home" class="container">
        <section id="showcase" class="d-flex justify-content-space-around align-items-center flex-dir-mb-column-reverse">
            <div>
                <h1><span>Node</span> JS</h1>
                <p class="text-muted">JavaScript Runtime <br> Fast, Efficient, and Scalable</p>
                <a href="/docs" class="btn-primary">Get Started</a>
                <a href="/download/pdf" class="btn-primary-transparent" id="download-pdf-btn">Download PDF</a>
            </div>
            <img src="img/node-js-logo.svg" alt="node-js-logo">
        </section>

        <section id="stats">
            <h1 class="text-center">Stats</h1>

            <div id="stat-cards" class="d-flex align-items-center justify-content-space-around flex-dir-mb-column my-2">
                <div class="d-flex align-items-center justify-content-center flex-dir-column">
                    <img src="/img/downloads.svg" alt="downloads">
                    <h2>Downloads</h2>
                    <p class="text-muted">1 500 000 000+</p>
                </div>

                <div class="d-flex align-items-center justify-content-center flex-dir-column">
                    <img src="/img/code.svg" alt="website">
                    <h2>Websites</h2>
                    <p class="text-muted">30 000 000+</p>
                </div>

                <div class="d-flex align-items-center justify-content-center flex-dir-column">
                    <img src="/img/loader.svg" alt="loader">
                    <h2>Loading Time</h2>
                    <p class="text-muted">-60%</p>
                </div>
            </div>
        </section>
    </main>

<%- include('./partials/footer.ejs') %>